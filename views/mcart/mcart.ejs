<%- include("../header.ejs") %>
    <div class="box" id="heading" style="margin-top: 5%;">
        <h1>Your Shopping Cart</h1>
    </div>
    <div class="box">
        <% itemc.forEach(function(item){ %>
            <form action="/cartdelete" method="post">
            <div class="item">
                <input type="checkbox" name="cartcheckbox" value="<%=item._id%>" onchange="this.form.submit()">
                <p><%= item.code %></p>
            </div>
            </form>
        <% }) %>
        <form class="item" action="/views/mcart" method="post">
            <input type="text" name="newitem" placeholder="Add New Item">
            <button type="submit" name="button">+</button>
        </form>
    </div>
<%- include("../footer.ejs") %>